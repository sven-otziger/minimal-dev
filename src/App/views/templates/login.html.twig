<!DOCTYPE html>
<html lang="en">

<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>{{ source('main.css') }}</style>
</head>

<body>

{{ include('partial_view/_navbar.html.twig', {noLink: true}) }}

<div class="container login">
    <div class="row mt-5 temp-height">
        <div class="col p-5 temp-bg">

            <form action="/logging-in" method="post" class="login-form">
                <div>
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username">
                </div>
                <div>
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password">
                </div>
                <div class="submit">
                    <input type="submit" value="Log in">
                </div>

            </form>

            <form action="/signup" method="post" class="signup-form">
                <p class="d-inline-block">Not yet having an account. Create one here:</p>
                <input type="submit" value="Create a new account">
            </form>

            {% if message %}
                <p class="mt-5"><i class="fa-solid fa-info"></i> {{ message }}</p>
            {% endif %}

        </div>
    </div>
</div>

{{ include('partial_view/_footer.html.twig') }}

<script src="https://kit.fontawesome.com/a41dcf7e67.js" crossorigin="anonymous"></script>
</body>
</html>