<!DOCTYPE html>
<html lang="en">
<head>
    <title>Registration</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>{{ source('main.css') }}</style>
</head>

<body>

{{ include('partial_view/_navbar.html.twig', {username: currentUser, noLink: true}) }}

<div class="container create-user">
    <div class="row mt-5 temp-height">
        <div class="col p-5 temp-bg">

            <form action="/createUser" method="post" class="user-creation">

                <div>
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username">
                </div>
                <div>
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password">
                </div>
                <div>
                    <label for="age">Age</label>
                    <input type="text" id="age" name="age">
                </div>
                <div>
                    <label for="street">Street</label>
                    <input type="text" id="street" name="street">
                </div>
                <div>
                    <label for="number">Number</label>
                    <input type="text" id="number" name="number">
                </div>
                <div>
                    <label for="zip">ZIP</label>
                    <input type="text" id="zip" name="zip">
                </div>
                <div>
                    <label for="city">City</label>
                    <input type="text" id="city" name="city">
                </div>
                <div>
                    <label for="role">Role</label>
                    <select name="role" id="role">
                        {% for role in roles %}
                            <option value="{{ role.id }}">{{ role.description|capitalize }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="submit">
                    <input type="submit" value="Create User">
                </div>

            </form>

            <form action="/login" method="post" class="link-login-form">
                <p class="d-inline-block">Already having an account. Log in here:</p>
                <input type="submit" value="Log in">
            </form>

            <p>{{ message }}</p>

        </div>
    </div>
</div>

{{ include('partial_view/_footer.html.twig') }}

<script src="https://kit.fontawesome.com/a41dcf7e67.js" crossorigin="anonymous"></script>

</body>
</html>